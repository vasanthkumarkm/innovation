            android:name="com.ibm.parkease.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ibm.parkease.ParkingAreaDetails"
            android:label="@string/title_activity_parking_area_details" >
